<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigicallTest.Views.Menu.Dashboard">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <StackLayout x:Name="LogoStack">
                <Label x:Name="lblNoInternet" HorizontalTextAlignment="Center" TextColor="White" BackgroundColor="Red"/>
            </StackLayout>
            
            <Label Text="Local Database" VerticalOptions="Center" FontSize="Medium"
                   HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                   HorizontalOptions="Center"/>
            <Button Text="Employees" Clicked="SelectedEmployees" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>